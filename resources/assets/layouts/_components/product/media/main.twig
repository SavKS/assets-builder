<div class="c-product-media__main swiper">
    <div class="swiper-wrapper">
        {% for y in 1..3 %}
            {% for i in 1..3 %}
                <div class="swiper-slide">
                    <picture>
                        <source srcset="../img/demo/product/{{ i }}.png, ../img/demo/product/{{ i }}@2x.png 2x" type="image/png">
                        <img src="../img/demo/product/{{ i }}.png" width="922" height="620" alt="">
                    </picture>
                </div>
            {% endfor %}
        {% endfor %}
    </div>

    <div class="swiper-control">
        <button class="swiper-button-prev">
            <span class="sr-only">Попередній слайд</span>
            <i class="i-icon i-arrow i-icon--left"></i>
        </button>

        <button class="swiper-button-next">
            <span class="sr-only">наступний слайд</span>
            <i class="i-icon i-arrow i-icon--right"></i>
        </button>
    </div>
</div>

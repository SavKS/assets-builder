<div class="m-modal"
    id="signupModal"
    tabindex="-1"
    aria-hidden="true"
    aria-labelledby="signupModalTitle"
>
    <div class="m-dialog m-dialog--lg m-dialog--centered">
        <div class="m-content m-content--bg">
            <div class="m-bg">
                <picture class="m-bg__img">
                    <source srcset="../img/demo/modal/bg-1_236x600.jpg, ../img/demo/modal/bg-1_236x600@2x.jpg 2x" type="image/jpeg">
                    <img src="../img/demo/modal/bg-1_236x600.jpg" width="236" height="600" alt="Bg">
                </picture>

                <div class="m-bg__logo">
                    <img src="../img/logo-white.svg" width="185" height="40" alt="Parkas">
                </div>
            </div>

            <div class="m-header">
                <button type="button" class="m-close f-btn--link" data-modal-dismiss="" aria-label="Закрити">
                    <i class="i-icon i-close"></i>
                </button>
            </div>

            <div class="m-body">
                <div class="mx-auto f-box">
                    <div class="m-title c-title c-title--3" id="signupModalTitle">Вхід</div>

                    <div class="f-group">
                        <label for="signupPhone" class="f-label">Твій номер телефону</label>
                        <input type="text" id="signupPhone" placeholder="+380 98 765-43-21" class="f-input">
                    </div>

                    <div class="f-submit">
                        <button type="button" data-modal-dismiss="" data-modal-target="#signup2Modal" class="f-btn f-btn--dark f-btn--block">
                            Продовжити
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


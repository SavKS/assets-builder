<div class="c-hero c-carousel js-carousel">
    <div class="l-box">
        <div class="swiper">
            <div class="swiper-wrapper">
                {% for i in 1..3 %}
                    <div class="swiper-slide">
                        <picture class="c-hero__img" style="--overlay: 0.1;">
                            {# <source srcset="../img/demo/hero/1_1920x988.webp, ../img/demo/hero/1_1920x988@2x.webp 2x" type="image/webp"> #}
                            <source media="(max-width: 575.9px)" srcset="../img/demo/hero/1_375x500.jpg, ../img/demo/hero/1_375x500@2x.jpg 2x" type="image/jpeg">
                            <source media="(min-width: 576px)" srcset="../img/demo/hero/1_1920x988.jpg, ../img/demo/hero/1_1920x988@2x.jpg 2x" type="image/jpeg">
                            <img src="../img/demo/hero/1_1920x988.jpg" alt="Picture 1">
                        </picture>

                        <div class="c-hero__info">
                            <div class="c-hero__category">Колекція Nasa</div>
                            <div class="c-hero__title c-title">The nasa evo bomber</div>
                            <div class="c-hero__btns">
                                <a href="#" class="f-btn f-btn--dark">Дивитися</a>
                            </div>
                        </div>
                    </div>

                    <div class="swiper-slide">
                        <picture class="c-hero__img" style="--overlay: 0.1;">
                            {# <source srcset="../img/demo/hero/2_1920x988.webp, ../img/demo/hero/2_1920x988@2x.webp 2x" type="image/webp"> #}<source media="(max-width: 575.9px)" srcset="../img/demo/hero/2_375x500.jpg, ../img/demo/hero/2_375x500@2x.jpg 2x" type="image/jpeg">
                            <source media="(min-width: 576px)" srcset="../img/demo/hero/2_1920x988.jpg, ../img/demo/hero/2_1920x988@2x.jpg 2x" type="image/jpeg">
                            <img src="../img/demo/hero/2_1920x988.jpg" alt="Picture 2">
                        </picture>

                        <div class="c-hero__info">
                            <div class="c-hero__category">Summer Sale</div>
                            <div class="c-hero__title c-title">Up to 60% Off</div>
                            <div class="c-hero__btns">
                                <a href="#" class="f-btn f-btn--dark">Чоловікам</a>
                                <a href="#" class="f-btn f-btn--dark">Жінкам</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="swiper-control">
                <button class="swiper-button-prev">
                    <span class="sr-only">Попередній слайд</span>
                    <i class="i-icon i-arrow i-icon--left"></i>
                </button>

                <button class="swiper-button-next">
                    <span class="sr-only">Наступний слайд</span>
                    <i class="i-icon i-arrow i-icon--right"></i>
                </button>
            </div>
        </div>
    </div>
</div>

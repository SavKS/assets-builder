<div class="c-edits-carousel c-carousel c-carousel--list c-carousel--2 js-carousel" data-space-between="20">
    <div class="l-box">
        <div class="c-carousel-inner">
            <h2 class="c-carousel-title c-title c-title--3">Добірки</h2>

            <div class="swiper">
                <div class="swiper-wrapper">
                    {% for i in 1..3 %}
                        {% for item in [
                            {
                                title: 'Літні речі від Alpha Industries',
                                tag: 'Наш вибір',
                                image: '../img/demo/edits/1_770x435'
                            },
                            {
                                title: 'Підбірка шорт, щоб побороти спеку',
                                tag: 'Весна–Літо 2022',
                                image: '../img/demo/edits/2_770x435'
                            },
                            {
                                title: 'Світшоти зі знижкою 20%',
                                tag: 'Наш вибір',
                                image: '../img/demo/edits/3_770x435'
                            },
                        ] %}
                            <div class="swiper-slide">
                                {% include "../card/base.twig" with item only %}
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>

                <div class="swiper-control">
                    <button class="swiper-button-prev">
                        <span class="sr-only">Попередній слайд</span>
                        <i class="i-icon i-arrow i-icon--left"></i>
                    </button>

                    <button class="swiper-button-next">
                        <span class="sr-only">наступний слайд</span>
                        <i class="i-icon i-arrow i-icon--right"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
